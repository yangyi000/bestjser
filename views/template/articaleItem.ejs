 <link rel='stylesheet' href='/stylesheets/articleItems.css' />
 <script src="/js/jquery.min.js"></script>
 <script>
function ondelete(id){
    $.ajax({
        url: '/list/delete',
        data: {
            id: id
        },
        dataType: 'json',
        type: 'post',
        success: function(res){
            window.location.href = window.location.origin+res.data.url;
        }
    })
}
 </script>
 <div id="articleItems">
 
 <ul>
    
    <% res.forEach(function(data){ %>
    <li class = 'article'>
        <div class='title'>
            <a href="/list/article.html?id=<%=data.id %>" rel="external nofollow" title="<%=data.title %>">
                <%=data.title %>
            </a>
            <% if(data.uid===userId){ %>
            <div class="actions">
                <a href="/article/edit?id=<%=data.id %>" rel="external nofollow" title="编辑">
                    编辑
                </a>
                <a onclick="ondelete(<%=data.id%>)" rel="external nofollow" title="删除">
                    删除
                </a>
            </div>
             <% } %>
        </div>
        
        <div class='content'>
            <%=data.content %>
        </div>
        <p class='footer'>
        <% if(data.uid!==userId){ %>
        <a href="//home?user=<%=username%>"><%=data.username %></a>
        <% } %>
        <span>
        发表于<%= new Date(data.createtime*1000).toLocaleString()%>
        </span>
        <a href="/list/article.html?id=<%=data.id %>" rel="external nofollow" title="<%=data.title %>">
            评论(<%=data.replynum||0 %>)
        </a>
        </p>
    </li>
    <% }) %>
</ul>
    
</div>